<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!-- pressed -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/cancel_button_pressed" />
            <corners android:bottomRightRadius="30sp"
                android:bottomLeftRadius="30sp"
                android:topRightRadius="30sp"
                android:topLeftRadius="30sp"/>
        </shape>
    </item>
    <item android:state_focused="true"> <!-- focused -->
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/cancel_button_pressed" />
            <corners android:bottomRightRadius="30sp"
                android:bottomLeftRadius="30sp"
                android:topRightRadius="30sp"
                android:topLeftRadius="30sp"/>
        </shape>
    </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <solid android:color="@color/cancel_button_default" />
            <corners android:bottomRightRadius="30sp"
                android:bottomLeftRadius="30sp"
                android:topRightRadius="30sp"
                android:topLeftRadius="30sp"/>
        </shape>
    </item>
</selector>